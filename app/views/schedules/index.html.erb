<h1>Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Lundi</th>
      <th>Mardi</th>
      <th>Mercredi</th>
      <th>Jeudi</th>
      <th>Vendredi</th>
      <th>Samedi</th>
      <th>Dimanche</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.lundi %></td>
        <td><%= schedule.mardi %></td>
        <td><%= schedule.mercredi %></td>
        <td><%= schedule.jeudi %></td>
        <td><%= schedule.vendredi %></td>
        <td><%= schedule.samedi %></td>
        <td><%= schedule.dimanche %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

