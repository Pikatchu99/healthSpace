<div class="container" style="margin-top: 100px;">
    <div class="text-center">Welcome <%= @pharmacien.name %></div>
    <% @pharmacy = Pharmacy.find(@pharmacien.pharmacy.id) %>
    <div class="text-center mb-5 ">MY PHARMACY: <%= @pharmacien.pharmacy.name %> <a href="<%= edit_pharmacy_path(@pharmacien.pharmacy.id, where: "update") %>" class="ml-5 btn btn-outline-info" >Edit Pharmacy Informations</a><a href="<%= edit_schedule_path(@pharmacy.schedules.ids) %>" class="ml-5 btn btn-outline-info" >Edit Schedules Informations</a></div>
  
    <table class="table">
      <thead class="" style="background-color: #78c9c5 !important;">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Product Name</th>
          <th scope="col">Product Edit</th>
          <th scope="col">Product Show</th>
          <th scope="col">Product Destroy</th>
        </tr>
      </thead>
        <tbody>
            <% count = 1%>
            <div class="d-flex justify-content-between">
                <a href="<%= new_product_path %>" class="btn btn-outline-success mb-2">Create New Product </a>
                <div class="btn btn-outline-baclk mb-2"><%= @pharmacien.pharmacy.products.count %> Products</a>
            </div>
            <% @pharmacien.pharmacy.products.each do |product| %>
                <tr>
                  <th scope="row"><%= count %> </th>
                  <td><%= product.name %></td>
                  <td> <a href="<%= product_path(product.id)%>" class="btn btn-outline-info">Show</a></td>
                  <td> <a href="<%= edit_product_path(product.id, where: "update") %>" class="btn btn-outline-warning">Edit</a></td>
                  <td> <a href="<%= product_path(product.id)%>"data-method="delete" data-confirm="Are you sure ?" class="btn btn-outline-danger">Destroy</a></td>
                </tr>
                <% count += 1%>
            <% end %>
        </tbody>
    </table>
</div>
<%= link_to 'Back', profile_path(current_user.id), class:"btn btn-outline-success ml-5 mt-5 text-center" %>


