<section class="bg-account-pages vh-100" style="margin-top: 100px">
  <div class="display-table">
    <div class="display-table-cell">
      <div class="container">
        <div class="row no-gutters align-items-center">
          <div class="col-lg-12">
            <div class="login-box">
              <div class="row align-items-center no-gutters">
                <div class="col-lg-6">
                  <div class="bg-light">
                    <div class="row justify-content-center">
                      <div class="col-lg-10">
                        <div class="home-img login-img text-center d-none d-lg-inline-block">
                          <div class="animation-2"></div>
                          <div class="animation-3"></div>
                          <img src="https://user-images.githubusercontent.com/72025145/138403804-e1fded88-b553-40c6-9947-f5fef7eda03f.jpg" class="img-fluid" alt="">
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-lg-6">
                  <div class="row justify-content-center">
                    <div class="col-lg-11">
                      <div class="p-4">
                        <div class="text-center mt-3">
                          <img src="https://user-images.githubusercontent.com/72025145/137684945-16f6e824-e651-47a5-bded-13e990702f77.png" alt="" height="44">
                          <p class="text-info mt-3" style="font-size: 18px;"><% if params[:where] == "update" %> Mettre à jour ma Pharmacie <% else %> Créer ma pharmacie. <% end %></p>
                        </div>
                        <div class="p-3 custom-form">
                          <%= form_with(model: pharmacy, local: true) do |form| %>
                            <% if pharmacy.errors.any? %>
                              <div id="error_explanation">
                                <h2><%= pluralize(pharmacy.errors.count, "error") %> prohibited this pharmacy from being saved:</h2>
                                <ul>
                                  <% pharmacy.errors.full_messages.each do |message| %>
                                    <li><%= message %></li>
                                  <% end %>
                                </ul>
                              </div>
                            <% end %>
                            <div class="form-group">
                              <%= form.label :name %><br />
                              <%= form.text_field :name, class: "form-control", id: "pharmacyname" %>
                            </div>
                            <div class="form-group">
                              <%= form.label :contact %><br />
                              <%= form.text_field :contact, class: "form-control", id: "pharmacyemail" %>
                            </div>
                            <div class="form-group">
                              <%= form.label :whatsapp %><br />
                              <span style="font-size: 10px; color: red;">Veuillez entrer le numéro de téléphone sans le code pays et sans espace.</span><br/>
                              <span style="font-size: 10px; color: red;">Exemple: 96560010.</span>
                              <%= form.text_field :whatsapp, class: "form-control", id: "pharmacywhatsapp" %>
                            </div>
                            <div class="form-group">
                              <%= form.label :city %> of pharmacy<br />
                              <%= form.select :city, [ "Cotonou", "Abomey-Calavi", "Porto-Novo", "Parakou", "Djougou", "Bohicon", "Natitingou", "Savè", "Abomey", "Nikki", "Lokossa", "Ouidah", "Dogbo-Tota", "Kandi", "Covè", "Malanville", "Pobé", "Kérou", "Savalou", "Sakété", "Comè", "Bembéréké", "Bassila", "Banikoara", "Kétou"," Dassa-Zoumè", "Tchaourou", "Allada", "Aplahoué", "Tanguiéta", "N'Dali", "Segbana", "Athiémé", "Grand Popo", "Kouandé"], class: "form-control", prompt: 'Ville' %>
                            </div>
                            <div class="form-group">
                              <%= form.label :quartier %> or (neighborhood) of pharmacy<br />
                              <span style="font-size: 10px; color: red;">Assurez-vous d'entrer le bon nom de votre quartier.</span>
                              <%= form.text_field :quartier, autofocus: true, autocomplete: "quartier", class: "form-control" %>
                            </div>
                            <div class="mt-3">
                              <%= form.submit "Enregistrer ma pharmacie", class: "btn btn-primary btn-block" %>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>