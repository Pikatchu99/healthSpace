                        <% end %>
                    </li>
                </ul>
                <div class="navbar-button d-none d-lg-inline-block">
                    <% if !current_user %>
                        <a href="<%=  new_user_registration_path %>" class="btn btn-sm btn-soft-primary btn-round">Sign Up</a>
                        <% else %>
