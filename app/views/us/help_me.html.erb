  }
  
  #faqSection .faq-content {
      overflow: hidden;
      width: calc(100% - 8%);
      padding: 5px 2%;
      transition: all .25s ease-in-out 0s;
      background: #60c0ba;
      border: 1px solid hsla(0, 0%, 51.4%, .16);
      border-radius: 7px;
      max-height: 0px;
      visibility: hidden;
  }
  
  #faqSection .faq-content p {
      font-family: sans-serif;
      color: #fff;
      line-height: 140%;
      font-size: 14px;
      margin: 0 0 12px;
      text-shadow: 1px 1px 0 #2480;
      font-weight: 100;
  }
  
  #faqSection .faq-content a {
